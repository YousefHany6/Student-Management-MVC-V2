@model Teacher
<link href="~/css/create.css" rel="stylesheet" />
<body>
	<section class="p-3 p-md-4 p-xl-5">
		<form asp-controller="Teachers" autocomplete="off" lang="ar" asp-action="Add_Teacher" enctype="multipart/form-data" method="post">
			<div asp-validation-summary="ModelOnly" role="alert" class="text-danger"></div>
			<div class="container" dir="ltr">
				<div class="card border-light-subtle shadow-sm">
					<div class="con1">
						<div class="col-12">
							<div class="mb-5">
								<h2 class="h3">انشاء معلم</h2>
								<h3 class="fs-6 fw-normal text-secondary m-0 ">ادخل بيانات معلم</h3>
							</div>
						</div>
					</div>

					<div class="col-12 col-md-6" style="
    margin: auto;
">
						<div class="card-body p-3 p-md-4 p-xl-5 mb-3" style="border:none">
							<div dir="rtl">
								<div class="labels row gy-3 gy-md-4 overflow-hidden">
									<div class="col-12">
										<label for="firstName" asp-for="Teacher_Name" class="form-label">اسم معلم<span class="text-danger">*</span></label>
										<input type="text" asp-for="Teacher_Name" class="form-control" id="firstName" placeholder="اسم معلم">
										<span asp-validation-for="Teacher_Name" class="text-danger"></span>

									</div>
									<div class="col-12">
										<label for="email" asp-for="SUser.Email" class="form-label">البريد الالكتروني<span class="text-danger">*</span></label>
										<input type="email" asp-for="SUser.Email" class="form-control" id="email" placeholder="name@example.com">
										<span asp-validation-for="SUser.Email" class="text-danger"></span>

									</div>
									<div class="col-12">
										<label for="password" asp-for="SUser.PasswordHash" class="form-label">كلمة المرور <span class="text-danger">*</span></label>
										<input type="password" asp-for="SUser.PasswordHash" class="form-control" id="password">

									</div>

								</div>
							</div>

						</div>

					</div>
				</div>
				<div class="con2" style="
    margin-top: 8px;
">
					<div class="col-12">
						<div class="d-grid">
							<input class="btn bsb-btn-xl btn-primary" type="submit" value="انشاء" />
						</div>
					</div>
				</div>
			</div>
			</div>
		</form>
	</section>

</body>





@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");

	}
}
